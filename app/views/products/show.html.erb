<%# This is where a listing is displayed to an end user %>
<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>

<p>
  <strong>User:</strong>
  <%= @product.user.email %>
</p>
<p>
<%= image_tag @product.picture %>
</p>

<%= link_to 'Back', products_path %> |
<% if current_user.id == @product.user_id %>
  <%= link_to 'Edit', edit_product_path(@product) %>
  <%= link_to "delete", product_path(@product.id), method: :delete%>
<% end %>
